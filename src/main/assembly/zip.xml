<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <!-- <directory>${project.basedir}/conf</directory> -->
            <directory>${project.basedir}/META-INF</directory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source> ${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:${project.artifactId}:jar:*</exclude>
                <exclude>com.google.code.findbugs:jsr305</exclude>
                <exclude>io.netty:netty-all:*</exclude>
                <exclude>org.projectlombok:lombok:jar:*</exclude>
                <exclude>io.netty:netty-tcnative-boringssl-static:jar:*</exclude>
                <exclude>org.projectlombok:lombok:jar:*</exclude>
                <exclude>org.codehaus.mojo:animal-sniffer-annotations:jar:*</exclude>
                <exclude>com.google.errorprone:error_prone_annotations:jar:*</exclude>
                <exclude>com.google.guava:failureaccess:jar:*</exclude>
                <exclude>org.checkerframework:checker-qual:jar:*</exclude>
                <exclude>com.google.guava:listenablefuture:jar:*</exclude>
                <exclude>com.google.errorprone:error_prone_annotations:jar:*</exclude>
                <exclude>com.google.j2objc:j2objc-annotations:jar:*</exclude>
                <exclude>org.codehaus.mojo:animal-sniffer-annotations:jar:*</exclude>
                <!-- <exclude>com.google.guava:guava:jar:*</exclude> -->
                <exclude>connector.sdk:connector.sdk.api:jar:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>